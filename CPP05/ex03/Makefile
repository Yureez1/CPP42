NAME = Bureaucrat
CXX = c++
CXXFLAGS = -Werror -Wall -Wextra -std=c++98 -g

# =============================================#
# =================ðŸ”¹FOLDERSðŸ”¹=================#
# =============================================#
SRCS_DIR = .
OBJS_DIR = obj

# =============================================#
# ================ðŸ”¹SRCS/OBJSðŸ”¹================#
# =============================================#
SRCS = Bureaucrat.cpp AForm.cpp main.cpp \
	   PresidentialPardonForm.cpp RobotomyRequestForm.cpp \
	   ShrubberyCreationForm.cpp Intern.cpp
OBJS = $(addprefix $(OBJS_DIR)/, $(SRCS:.cpp=.o))

# =============================================#
# =================ðŸ”¹COLORSðŸ”¹==================#
# =============================================#

LILA = \033[1;38;5;206m
GREEN = \033[32m
NC = \033[0m

# =============================================#
# ==================ðŸ”¹RULESðŸ”¹==================#
# =============================================#

all: $(NAME)

$(NAME): $(OBJS)
	@echo "$(LILA)BUREAUCRAT Form...$(NC)"
	@$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)
	@echo "$(GREEN)BUREAUCRAT Form COMPILED!âœ…â€‹$(NC)"

$(OBJS_DIR)/%.o: $(SRCS_DIR)/%.cpp | $(OBJS_DIR)
	@$(CXX) $(CXXFLAGS) -c $< -o $@
	@echo "$(GREEN)Compiled: $<âœ…â€‹"

$(OBJS_DIR):
	@mkdir -p $(OBJS_DIR)

clean:
	@echo "$(LILA)CLEANING OBJECTS FILES...$(NC)"
	@rm -rf $(OBJS_DIR)
	@echo "$(GREEN)OBJECTS FILES CLEANED!$(NC)"

fclean: clean
	@echo "$(LILA)CLEANING ALL FILES...$(NC)"
	@rm -f $(NAME)
	@echo "$(LILA)ALL FILES CLEANED!$(NC)"

re: fclean all

.PHONY: all clean fclean re
